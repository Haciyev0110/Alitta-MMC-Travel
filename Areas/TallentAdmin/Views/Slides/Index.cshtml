@model IEnumerable<AllittaMMC.Models.Slide>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/TallentAdmin/Views/Shared/_LayoutPage1.cshtml";
}

<div class="sb2-2">
    <div class="sb2-2-2">
        <ul>
            <li>
                <a href="@Url.Action("Index","Slides")"><i class="fa fa-home" aria-hidden="true"></i> Home</a>
            </li>
            <li class="active-bre">
                <a href="#"> Ui Form</a>
            </li>
        </ul>
    </div>
    <div class="sb2-2-3">
        <div class="row">
            <div class="col-md-12">
                <div class="box-inn-sp">
                    <div class="inn-title">
                        <h4> Slidera Düzəliş Et</h4>
                        <a class="dropdown-button drop-down-meta" href="#" data-activates="dr-users"><i class="material-icons">more_vert</i></a>
                        <ul id="dr-users" class="dropdown-content">
                            <li>
                                <a href="@Url.Action("Create","Slides")">Add New</a>
                            </li>
                        </ul>

                        <!-- Dropdown Structure -->

                    </div>
                    <div class="tab-inn">
                        <div class="table-responsive table-desi">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Şəkil</th>
                                        <th>Başlıq</th>
                                        <th>2 ci Mətin</th>
                                        <th>3 cü Mətin</th>
                                        <th>4 cü Mətin</th>


                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            <span class="list-img"><img style="width:70px;height:70px" src="~/Public/images/slider/@item.SlideImg" alt=""></span>
                                        </td>

                                        <td>@item.Text1</td>
                                        <td>@item.Text2</td>
                                        <td>@item.Text3</td>
                                        <td>@item.Text4</td>

                                        <td>
                                            <a href="@Url.Action("Details","Slides",new {id=item.ID })"><i class="fa fa-eye" aria-hidden="true"></i></a>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Edit","Slides",new {id=item.ID })"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Delete","Slides",new {id=item.ID })"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                        </td>
                                    </tr>

                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>