@model AllittaMMC.Models.AboutU

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/TallentAdmin/Views/Shared/_LayoutPage1.cshtml";
}
@using (Html.BeginForm("Delete", "AboutUs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="container-fluid sb2">
        <div class="row">
            <div class="sb2-2">
                <div class="sb2-2-2">
                    <ul>
                        <li>
                            <a href="@Url.Action("Index", "Dashboard")"><i class="fa fa-home" aria-hidden="true"></i> Home</a>
                        </li>
                        <li class="active-bre">
                            <a href="@Url.Action("Index", "AboutUs")">Geriyə Qayıd</a>
                        </li>
                    </ul>
                </div>
                <div class="sb2-2-3">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="box-inn-sp">
                                <div class="inn-title">
                                    <h4>View Haqqımızda Details</h4>
                                </div>
                                <div class="tab-inn">
                                    <form>
                                        <div class="row">
                                            <div class="input-field col s12">
                                                <input id="email" type="text" value="@Model.Header" class="validate">
                                                <label for="email">Başlıq</label>
                                            </div>
                                            <div class="input-field col s12">
                                                <textarea id="textarea1" class="materialize-textarea">@Model.TextH</textarea>
                                                <label for="textarea1">Məğzi:</label>
                                            </div>
                                            <div class="input-field col s12">
                                                <textarea id="textarea1" class="materialize-textarea">@Model.TextP</textarea>
                                                <label for="textarea1">Məzmunu:</label>
                                            </div>

                                            <div class="input-field col s4">

                                                <label for="textarea1">Şəkil:</label>
                                                <img src="~/Public2/images/about/@Model.Image" />
                                            </div>
                                        </div>
                                        <div class="input-field col s12">
                                            <input type="submit" class="waves-effect waves-light btn-large" value="Submit">
                                        </div>

                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}