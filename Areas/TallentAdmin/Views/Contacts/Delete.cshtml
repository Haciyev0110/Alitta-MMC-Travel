@model AllittaMMC.Models.Contact

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/TallentAdmin/Views/Shared/_LayoutPage1.cshtml";
}

@using (Html.BeginForm("Delete", "Contacts", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <<div class="container-fluid sb2">
        <div class="row">
            <div class="sb2-2">
                <div class="sb2-2-2">
                    <ul>
                        <li>
                            <a href="@Url.Action("Index","Contacts")"><i class="fa fa-home" aria-hidden="true"></i> Geriyə Qayıd</a>
                        </li>

                    </ul>
                </div>
                <div class="sb2-2-add-blog sb2-2-1">
                    <h2>Ünvanı Gözdən Keçir </h2>
                    <form>
                        <div class="row">
                            <div class="input-field col s12">
                                <input id="list-title" type="text" value="@Model.Location" name="Location" class="validate">
                                <label for="list-title">Ölkə və Şəhər</label>
                            </div>
                            <div class="input-field col s12">
                                <input id="list-title" type="tel" value="@Model.Phone" name="Phone" class="validate">
                                <label for="list-title">Telefon</label>
                            </div>
                            <div class="input-field col s12">
                                <input id="list-title" type="email" value="@Model.Email" name="Email" class="validate">
                                <label for="list-title">Email</label>
                            </div>
                            <div class="input-field col s12">
                                <input id="list-title" type="text" value="@Model.Address" name="Address" class="validate">
                                <label for="list-title">Ünvan</label>
                            </div>
                            <div class="input-field col s12">
                                <input id="list-title" type="text" value="@Model.Office" name="Office" class="validate">
                                <label for="list-title">Offis</label>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input type="submit" class="waves-effect waves-light btn-large" value="Submit">
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
}