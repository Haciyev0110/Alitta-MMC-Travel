@model AllittaMMC.Models.Service

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/TallentAdmin/Views/Shared/_LayoutPage1.cshtml";
}

@using (Html.BeginForm("Delete", "Services", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="container-fluid sb2">
        <div class="row">
            <div class="sb2-2">
                <div class="sb2-2-2">
                    <ul>
                        <li>
                            <a href="@Url.Action("Index", "Services")"><i class="fa fa-home" aria-hidden="true"></i> Geriyə Qayıd</a>
                        </li>

                    </ul>
                </div>
                <div class="sb2-2-add-blog sb2-2-1">
                    <h2>Servizləri Gözdən Keçir </h2>
                    <form>
                        <div class="row">
                            <div class="input-field col s12">
                                <input id="list-title" type="text" value="@Model.Names" name="Names" class="validate">
                                <label for="list-title">Serviz</label>
                            </div>
                            <div class="input-field col s12">
                                <input id="list-title" type="text" value="@Model.ServicesHeader.Header" name="Names" class="validate">
                                <label for="list-title">Kateqiroyası</label>
                            </div>


                            <div class="row">
                                <div class="input-field col s12">
                                    <input type="submit" class="waves-effect waves-light btn-large" value="Submit">
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
}