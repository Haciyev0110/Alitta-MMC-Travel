@model AllittaMMC.Models.Additional_Info

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/TallentAdmin/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container-fluid sb2">
    <div class="row">
        <div class="sb2-2">
            <div class="sb2-2-2">
                <ul>
                    <li>
                        <a href="@Url.Action("Index","Additional_Info")"><i class="fa fa-home" aria-hidden="true"></i> Geriyə Qayıd</a>
                    </li>

                </ul>
            </div>
            <div class="sb2-2-add-blog sb2-2-1">
                <h2>Paketi Gözdən Keçir </h2>
                <form>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="list-title" type="text" value="@Model.Location" name="Location" class="validate">
                            <label for="list-title">Ölkə</label>
                        </div>
                        <div class="input-field col s12">
                            <input id="list-title" type="text" value="@Model.Duration" name="Duration" class="validate">
                            <label for="list-title">Müddət</label>
                        </div>
                        <div class="input-field col s12">
                            <input id="list-title" type="number" min="0" max="100" value="@Model.Min_Age" name="Min_Age" class="validate">
                            <label for="list-title">Minimum Yaş</label>
                        </div>
                        <div class="input-field col s12">
                            <input id="list-title" type="number" min="0" value="@Model.Max_People" name="Max_People" class="validate">
                            <label for="list-title">Maksimum İnsan</label>
                        </div>
                        <div class="input-field col s12">
                            <input id="list-title" type="text" value="@Model.Landing" name="Landing" class="validate">
                            <label for="list-title">Açılış</label>
                        </div>
                        <div class="input-field col s12">
                            <input id="list-title" type="text" value="@Model.Check_In" name="Check_In" class="validate">
                            <label for="list-title">Giriş Vaxtı</label>
                        </div>
                        <div class="input-field col s12">
                            <input id="list-title" type="text" value="@Model.Check_Out" name="Check_Out" class="validate">
                            <label for="list-title">Çıxış Vaxtı</label>
                        </div>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>
</div>
